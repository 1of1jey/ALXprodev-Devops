#!/bin/bash

# Pok√©mon Data Extraction Script
# Extracts name, height, weight, and type from data.json
# Uses jq, awk, and sed for text manipulation

DATA_FILE="data.json"

# Check if data file exists
if [ ! -f "$DATA_FILE" ]; then
    echo "Error: $DATA_FILE not found. Please run apiAutomation-0x00 first."
    exit 1
fi

# Extract data using jq
name=$(jq -r '.name' "$DATA_FILE" | sed 's/^./\u&/')
height=$(jq -r '.height' "$DATA_FILE")
weight=$(jq -r '.weight' "$DATA_FILE")
type=$(jq -r '.types[0].type.name' "$DATA_FILE" | sed 's/^./\u&/')

# Format height and weight using awk
formatted_height=$(echo "$height" | awk '{printf "%.1f", $1/10}')
formatted_weight=$(echo "$weight" | awk '{printf "%d", $1/10}')

# Format and display output
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
